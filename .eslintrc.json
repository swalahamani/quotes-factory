{
	"env": {
		"commonjs": true,
		"es2020": true,
		"node": true
	},
	"extends": ["prettier", "airbnb-base", "plugin:node/recommended"],
	"plugins": ["prettier", "import"],
	"settings": {
		"import/resolver": {
			"babel-module": {
				"alias": {
					"@config": "./src/config",
					"@loaders": "./src/loaders"
				}
			}
		}
	},
	"parserOptions": {
		"ecmaVersion": 11,
		"sourceType": "module"
	},
	"rules": {
		"prettier/prettier": "error",
		"quotes": ["error", "double"],
		"semi": ["error", "always"],
		"indent": ["error", "tab"],
		"no-console": "off",
		"no-tabs": [
			"error",
			{
				"allowIndentationTabs": true
			}
		],
		"node/no-unsupported-features/es-syntax": "off",
		"node/no-missing-import": "off",
		"no-process-exit": "off",
		"arrow-parens": ["error", "always"],
		"arrow-body-style": ["error", "always"],
		"comma-dangle": "off"
	}
}
