{
	"env": {
		"es2020": true,
		"node": true
	},
	"extends": ["prettier", "airbnb-base", "plugin:node/recommended"],
	"plugins": ["prettier"],
	"parserOptions": {
		"ecmaVersion": 11,
		"sourceType": "module"
	},
	"rules": {
		"prettier/prettier": "error",
		"quotes": ["error", "double"],
		"semi": ["error", "always"],
		"indent": ["error", "tab"],
		"no-console": "off",
		"no-tabs": ["error", { "allowIndentationTabs": true }]
	}
}
